{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Component Library tsconfig",
  "extends": "./tsconfig-base.json",
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "Node",
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
